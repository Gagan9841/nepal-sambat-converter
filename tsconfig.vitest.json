{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/__tests__/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.vue",
    "env.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "jsdom", "vitest/globals"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "moduleResolution": "bundler"
  }
}
